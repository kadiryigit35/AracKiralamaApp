<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiralanacak Araç"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvKiralamaAracAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Araç Adı"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etAdSoyad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:hint="Ad Soyad" />

        <EditText
            android:id="@+id/etTelefon"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:inputType="phone"
            android:hint="Telefon" />

        <EditText
            android:id="@+id/etKiralamaGunSayisi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:inputType="number"
            android:hint="Kiralama Süresi (Gün)" />

        <Button
            android:id="@+id/btnKiralamaKaydet"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Kirala"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</ScrollView>
