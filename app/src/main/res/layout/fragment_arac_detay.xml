<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAracResim"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Araç resmi"/>

        <TextView
            android:id="@+id/tvAracAdiDetay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Araç Adı"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvAracAciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Araç Açıklaması"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvAracFiyat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Günlük Ücret: 0₺"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnKirala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirala"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</FrameLayout>
